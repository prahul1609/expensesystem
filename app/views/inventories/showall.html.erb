<!DOCTYPE >
<head><h2>Listing All Inventories</h2></head>
<body>
	<% if !flash[:success].blank?%>
		<p style="color:green"> <%= flash[:success] %></p>
	<% end %>
	<% if !flash[:error].blank?%>
		<p style="color:red"><%= flash[:error] %></p>
	<% end %>

		<table class="table">
			<thead>
				<tr>
					<th style="color:blue">User Name</th>
					<th><%= sortable "description", "Description" %></th>
					<th><%= sortable "item_type", "Item Type" %></th>
					<th><%= sortable "purchase_date", "Purchase Date" %></th>
					<th><%= sortable "amount_cents", "Amount" %></th>
					<th><%= sortable "amount_currency", "Currency Type" %></th>
				</tr>
			</thead>
			<tbody>
				<% @inventories.each do |i| %>
					<tr>
						<td style="color:Green"><%= username i.user_id %></td>
						<td><%= i.description %></td>
						<td><%= i.item_type %></td>
						<td><%= i.purchase_date %></td>
						<td><%= i.amount_cents %></td>
						<td><%= i.amount_currency %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	
	
	<%= link_to 'Home' , welcome_index_path %>

</body>

